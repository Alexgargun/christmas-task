{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "es2016"
    ]
  },
  "exclude": [
    "node_modules",
    "/"
  ],
  "include": [
    "src/**/*",
    "modules.d.ts",
    "tsconfig.json"
  ]
}